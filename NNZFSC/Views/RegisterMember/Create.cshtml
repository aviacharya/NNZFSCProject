<script type="text/javascript">
        $(document).ready(function () {
            //$("#txtEmail").first().focus();

            $("#MembershipDate").change(function () {
                var MembershipDate = this.value;
               
                $.ajax({
                    url: '/RegisterMember/GetExpirydate',
                    type: 'POST',
                    data: JSON.stringify({ date: MembershipDate }),
                    dataType: 'json',
                    contentType: 'application/json',
                    success: function (data) {
                        if (data != "" || data != null) {
                          
                            $("#MembershipExpiryDate").val(data);

                        }
                        else {
                            alert("Our system does not recognize this date. Please try again.");
                            $("#MembershipDate").focus();
                        }
                    }
                });
            });
        });
</script>





