<script type="text/javascript">


            $("#MemberId").change(function () {

                var MemberId = this.value;

                $.ajax({
                    @*url: '@Url.Action("Create", "Payment")',*@
                    url: '/Payment/GetMemberInfo',

                    type: 'POST',
                    data: JSON.stringify({ id: MemberId }),
                    dataType: 'Json',
                    contentType: 'application/json',
                    success: function (data) {

                        $("#MemberId").val(data.MemberId);
                        $("#MemFname").val(data.MemberFirstName);
                        $("#MemMname").val(data.MemberMiddleName);
                        $("#MemLname").val(data.MemberLastName);
                        $("#MemAddress").val(data.MemberAddress);
                        $("#MemEmalAddress").val(data.EmailAddress);
                        $("#MemDate").val(data._MembershipDate);
                        $("#MemNextPaymentDate").val(data._MembershipExpiryDate);


                    }

                }
                )

            });


</script>

